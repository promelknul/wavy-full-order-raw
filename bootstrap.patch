+import pathlib, re, hashlib, datetime
+p=pathlib.Path(__file__).resolve().parents[1]; raw=p/'raw'; src=p/'src'; src.mkdir(exist_ok=True)
+def s(x):return re.sub(r'[^a-z0-9]+','-',x.lower()).strip('-')
+def d(t):
+ h=set();o=[]
+ for l in t.splitlines():
+  m=hashlib.md5(l.encode()).hexdigest()
+  if m not in h:h.add(m);o.append(l)
+ return '\n'.join(o)+'\n'
+g=[]
+for f in sorted(raw.glob('*.md')):
+ t=d(f.read_text()); n=src/f'{s(f.stem)}.md'; n.write_text(t); g.append(n)
+sm=['# Summary','','- [Предисловие](00_preface.md)']+[f'- [{n.stem}]({n.name})' for n in g]
+(src/'SUMMARY.md').write_text('\n'.join(sm)+'\n')
+p0=src/'00_preface.md'; p0.write_text(p0.read_text().replace('2025‑07‑26',datetime.date.today().isoformat()))
